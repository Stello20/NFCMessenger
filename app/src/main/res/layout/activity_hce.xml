<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".nfc.HCEActivity">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_hce"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="325dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="163dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="163dp" app:layout_constraintTop_toBottomOf="@+id/btn_hce"/>
    <Button
            android:text="Refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_hce" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="54dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="147dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="149dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_key_hce" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_hce" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="85dp" android:hint="Key"/>
</android.support.constraint.ConstraintLayout>